<div class='body'>
    <div class='container'>
        <% if flash[:notice] %>
          <p id="notice">
            <%= flash[:notice] %>
          </p>
        <% end %>

      <div class='row'>
        <div class='col-xs-3'>
           <h2>User info</h2>
             <table class='table'>
               <tr>
                <div class="pro_img">
                  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                </div>
                </tr>
                <tr>
              	  <th>name</th>
              	  <th><%= @user.name %></th>
                </tr>
                <tr>
              	  <th>introduction</th>
              	  <th><%= @user.introduction %></th>
                </tr>
              </table>
              <div class="row">
                   <% if @user.id == current_user.id %>
                  　<%= link_to '　', edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
                   <% end %>
              </div>

         <%= render 'users/list', book: @book %>


            <div class='col-xs-9'>
            	<h2>Books</h2>
                  <table class='table table-hover table-inverse'>
                    <thead>
                      <tr>
                        <th class=col-xs-2></th>
                        <th class=col-xs-3>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>

                    <tbody>
		        	<% @user.books.each do |book| %>

                        <tr>
                          <td>
                            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                          </td>
                          <td>
                          	<%= link_to book_path(book.id) do %>
                            <%= book.title %>
                            <% end %>
                          </td>
                          <td>
                            <%= book.body %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
		    </div>
		  </div>

	</div>
</div>
